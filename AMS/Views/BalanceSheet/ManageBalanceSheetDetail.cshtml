@using AMS.Constant
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Manage Balance Sheet Detail";
    Layout = "~/Views/Management/__ManagementLayout.cshtml";
    BalanceSheet bls = ViewBag.bls;
}

<div class="col-md-12">
    <div class="panel panel-default">

        <div class="heading-tab">
            <i class="fa fa-list"> Bảng chi tiết thu chi tháng @bls.ForMonth.Value.ToString(AmsConstants.MonthYearFormat)</i>
            <ul class="nav nav-tabs pull-right" role="tablist">
                <li>
                    <a href="/Management/BalanceSheet/View"><i class="fa fa-file-text-o"></i> Báo cáo thu chi</a>
                </li>
                <li class="active">
                    <a href="/Management/BalanceSheet/ManageBalanceSheetView"><i class="fa fa fa-plus"></i> Quản lý thu chi</a>
                </li>
                <li>
                    <a href="/Management/BalanceSheet/ManageTransactionCatView"><i class="fa fa fa-plus"></i> Quản lý nhóm thu chi</a>
                </li>
            </ul>
        </div>

        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane fade active in" id="">
                    <div class="panel panel-default" style="border-color: transparent">
                        <form class="form-horizontal" role="form">
                            <div class="col-md-12">
                                <div class="col-md-offset-4">
                                    @{
                                        if (bls.Status == SLIM_CONFIG.BALANCE_SHEET_OPEN)
                                        {
                                            <span id="btnDuedate" class="btn btn-default">
                                                <i class="fa fa-pencil" aria-hidden="true"></i> Chỉnh sửa
                                            </span>
                                            <span id="assignHdReqBtn" class="btn btn-danger" data-toggle="modal" data-target="#closeMonthlyBalanceSheetModal">
                                                Đóng
                                            </span>
                                        }
                                    }
                                </div>
                                <div class=" form-group">
                                    <div class="col-md-6">
                                        <fieldset class="scheduler-border less-padding border-top">
                                            <legend class="scheduler-border bold-black">Thông tin</legend>
                                            <div class="form-group">
                                                <label for="title" class="col-md-4 control-label">Tiêu đề</label>

                                                <div class="col-md-8">
                                                    <input id="title" class="form-control" value="@bls.Title" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="title" class="col-md-4 control-label">Trạng thái</label>

                                                @{

                                                    if (bls.Status == SLIM_CONFIG.BALANCE_SHEET_CLOSE)
                                                    {
                                                        <div class="col-md-8">
                                                            <span class="btn btn-danger">Đóng</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-md-8">
                                                            <span class="btn btn-info">Đang cập nhật</span>
                                                        </div>
                                                    }

                                                }

                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Ngày tạo</label>
                                                <div class="col-md-8">
                                                    <input class="form-control" value="@bls.CreateDate.Value.ToString(AmsConstants.DateFormat)" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Ngày cập nhật</label>
                                                <div class="col-md-8">
                                                    <input id="lastUpdate" class="form-control" value="@bls.LastModified.Value.ToString(AmsConstants.DateFormat)" />
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6 ">
                                        <fieldset class="scheduler-border less-padding border-top">
                                            <legend class="scheduler-border bold-black">Tổng quan về thu chi</legend>
                                            <div class="table-responsive">
                                                <table class="table v-middle table-bordered table-striped balance-sheet">
                                                    <thead>
                                                        <tr>
                                                            <th rowspan="2">Tên</th>
                                                            <th colspan="2" class="text-capitalize text-center" style="background-color: #dddddd">
                                                                Bảng lưu chuyển tiền mặt tháng @bls.ForMonth.Value.ToString(AmsConstants.MonthYearFormat)
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th>Tổng</th>
                                                            <th>Thực thu</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td><strong>Tồn đầu tháng</strong></td>
                                                            <td id="redudancyStartMonth" colspan="2">15,000,000</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Tổng thu nhập</strong></td>
                                                            <td id="forecastIncome"></td>
                                                            <td id="actualIncome"></td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Tổng chi</strong></td>
                                                            <td id="forecastExpense"></td>
                                                            <td id="actualExpense"></td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Tồn cuối tháng</strong></td>
                                                            <td id="redudancyEndMonth" colspan="2">0</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="table-responsive">
                                        <table id="blsTransDetailTbl" data-bls-id="@bls.Id" class="table v-middle table-striped table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Tên</th>
                                                    <th>Loại</th>
                                                    <th>Nhóm</th>
                                                    <th>Tháng</th>
                                                    <th>Tổng</th>
                                                    <th>Đã thanh toán</th>
                                                    <th>Ngày tạo</th>
                                                    <th class="text-right"></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Tên</th>
                                                    <th>Loại</th>
                                                    <th>Nhóm</th>
                                                    <th>Tháng</th>
                                                    <th>Tổng</th>
                                                    <th>Đã thanh toán</th>
                                                    <th>Ngày tạo</th>
                                                    <th class="text-right"></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="addIncomeLineModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id="incomeLineModalTitle" class="modal-title">Thêm giao dịch</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">

                    <div class="alert alert-info" id="successAddTransNotify" style="display: none">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <span>Thêm khoản thu thành công.</span>
                    </div>
                    <div class="alert alert-warning" id="failedAddTransNotify" style="display: none">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <span>Thêm khoản thu thất bại.</span>
                    </div>

                    <form id="addIncomeLineForm" class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="transTitle" class="col-sm-3 control-label">Tên </label>
                            <div class="col-sm-9">
                                <input id="transTitle" type="text" name="TransTitle" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Loại </label>
                            <div class="col-sm-9">
                                <label class="radio-inline">
                                    <input type="radio" value="1" checked="checked" name="TransType" />Thu
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" value="2" name="TransType" />Chi
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="transCat" class="col-sm-3 control-label">Nhóm </label>
                            <div class="col-sm-7">
                                <select id="transCat" name="TransCatId" class="form-control" data-size="3"></select>
                            </div>
                            <span class="btn btn-stroke btn-info btn-sm" onclick="closePopupAndShowOther()"><i class="fa fa-plus"></i> Nhóm</span>
                        </div>
                        <div class="form-group">
                            <label for="BalanceSheetForMonthView" class="col-sm-3 control-label">Cho tháng</label>
                            <div class="col-sm-9">
                                @*Do not del this code*@
                                @*<input id="BalanceSheetForMonthView" type="text" class="form-control"
                                       data-date-start-view="1" data-date-format="mm-yyyy" data-date-language="vi"
                                       data-date-min-view-mode="1" data-date-end-date="0m" data-date-start-date="0m"/>*@
                                <input id="BalanceSheetForMonthView" type="text" class="form-control"
                                       data-date-start-view="1" data-date-format="mm-yyyy" data-date-language="vi"
                                       data-date-min-view-mode="1" data-date-end-date="0m" data-date-start-date="-1m"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="transTotalAmount" class="col-sm-3 control-label">Tổng thanh toán</label>
                            <div class="col-sm-9">
                                <input id="transTotalAmountView" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="transPaidAmount" class="col-sm-3 control-label">Đã thanh toán</label>
                            <div class="col-sm-9">
                                <input id="transPaidAmountView" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="transDesc" class="col-sm-3 control-label">Mô tả</label>
                            <div class="col-sm-9">
                                <textarea id="transDesc" name="TransDesc" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-9 col-md-2">
                                <span id="addIncomeTrans" onclick="addIncomeTransaction()" class="btn btn-primary">Chấp nhận</span>
                            </div>
                            <div class="col-sm-offset-9 col-md-2">
                                <span id="updateIncomeTrans" onclick="updateIncomeTransaction()" class="btn btn-primary hide">Chấp nhận</span>
                            </div>
                        </div>
                        <input type="hidden" id="transForMonth" name="TransForMonth" value="" />
                        <input type="hidden" id="transPaidAmount" name="TransPaidAmount" value="" />
                        <input type="hidden" id="transTotalAmount" name="TransTotalAmount" value="" />
                        <input type="hidden" id="transId" name="TransId" value="" />
                        <input type="hidden" id="balanceSheetId" name="BalanceSheetId" value="@bls.Id" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="addTransactionTypeModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id="hdSrvModalTitle" class="modal-title">Thêm loại giao dịch</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">

                    <div class="alert alert-info" id="successAddTransTypeNotify" style="display: none">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <span>Thêm loại giao dịch thành công.</span>
                    </div>
                    <div class="alert alert-warning" id="failedAddTransTypeNotify" style="display: none">
