
@{
    ViewBag.Title = "ManageRequest";
    Layout = "~/Views/Management/__ManagementLayout.cshtml";
    int userId = ViewBag.userId;
}

<nav class="navbar navbar-subnav navbar-static-top" role="navigation">
    <div class="container-fluid">

        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#subnav">
                <span class="sr-only">Toggle navigation</span>
                <span class="fa fa-ellipsis-h"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="subnav">
            <ul class="nav navbar-nav">
                <li>
                    <a href="/Management/ManageRequestView/@userId"><i class="fa fa-fw icon-ship-wheel"></i> Quản lý yêu cầu hổ trợ</a>
                </li>
                <li class="active">
                    <a href="/Management/ViewHelpdeskServiceCategory/@userId"><i class="fa fa fa-tags"></i> Quản lý danh mục yêu cầu hổ trợ</a>
                </li>
            </ul>

        </div>
    </div>
</nav>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading panel-heading-gray">Quản lý danh mục yêu cầu hổ trợ</div>
        <div class="panel-body">
            <div class="panel panel-default" style="border-color: transparent">
                <form class="form-horizontal" id="searchHdSrv" role="form" onkeypress="return event.keyCode !== 13;">
                    <div class="form-group">
                        <div class="col-md-1">
                            <span class="btn btn-info" data-toggle="modal" data-target="#hdSrvCategoryModal"
                                  data-placement="top" onclick="openHdSrvCategoryModal()">
                                <i class="fa fa-plus"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="hdSrvCatTable"class="table v-middle  table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Tên</th>
                                        <th class="text-right">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="hdSrvCatTblBody">
                                    @Html.Partial("_helpdeskServiceCategoryTablePartial")
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="messageModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 id="hdSrvMsgModalTitle" class="modal-title">Thông Báo !</h4>
                </div>
                <div class="modal-body">
                    <p id="msgContent"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div id="hdSrvCategoryModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 id="hdSrvCateModalTitle" class="modal-title">Thêm loại dịch vụ hổ trợ</h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <div class="alert alert-info" id="hdSrvCatSuccessNotify" style="display: none">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <span>Nhóm dịch vụ hổ trợ được khởi tạo thành công.</span>
                        </div>
                        <div class="alert alert-warning" id="hdSrvCatFailedNotify" style="display: none">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <span>Nhóm dịch vụ hổ trợ được khởi tạo thất bại.</span>
                        </div>
                        <form id="hdSrvCategoryForm" class="form-horizontal" role="form">
                            <div class="form-group">
                                <label for="hdSrvCatName" class="col-sm-3 control-label">Tên </label>
                                <div class="col-sm-9">
                                    <input id="hdSrvCatName" type="text" name="hdSrvCatName" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-9 col-md-2">
                                    <button id="addHdSrvCat" name="addHdSrvCat" type="submit" class="btn btn-primary">Chấp nhận</button>
                                </div>
                            </div>
                            <input type="hidden" id="hdSrvCatId" name="hdSrvCatId" value="" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

