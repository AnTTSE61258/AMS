            $('#' + window.currentTab + '_tab').load("ManageRequest?action=" + viewName);
            $(".tab-pane.fade").removeClass("test active in");
            $("#h_desk_req_list").html("");
            $('#' + window.currentTab + '_tab').addClass("active in");
        }
    }

