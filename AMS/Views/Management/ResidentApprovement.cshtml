
@using AMS.Enum
@{
    ViewBag.Title = "ManageMember";
    Layout = "~/Views/Management/__ManagementLayout.cshtml";
}
@{
    int userId = ViewBag.userId;
}
<nav class="navbar navbar-subnav navbar-static-top" role="navigation">
    <div class="container-fluid">

        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#subnav">
                <span class="sr-only">Toggle navigation</span>
                <span class="fa fa-ellipsis-h"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="subnav">
            <ul class="nav navbar-nav">
                <li>
                    <a href="/Home/HelpdeskRequest/ViewHistory/@userId"><i class="fa icon-headphones"></i> Quản lý yêu cầu</a>
                </li>
                <li class="active">
                    <a href="/Management/ResidentApprovement/@userId"><i class="fa fa-group"></i> Quản lý xác nhận dân cư</a>
                </li>
            </ul>

        </div>
        <!-- /.navbar-collapse -->
    </div>
</nav>

<div class="col-md-12">
    <div class="panel panel-default">

        <div class="panel-heading panel-heading-gray">
            <i class="fa fa-bookmark"></i> Danh sách yêu cầu xác nhận dân cư
        </div>

        <div class="panel-body">
            <div class="form-horizontal" id="searchHdSrv" role="form">
                <!-- Data table -->
                <table id="residentApproveTbl" data-fromuserid="@userId" class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Tên cư dân</th>
                            <th>Căn hộ</th>
                            <th>Chủ hộ</th>
                            <th>Ngày tạo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Tên cư dân</th>
                            <th>Căn hộ</th>
                            <th>Chủ hộ</th>
                            <th>Ngày tạo</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody></tbody>
                </table>
                <!-- // Data table -->
            </div>
        </div>

    </div>
</div>

<div id="residentInfoDetail" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Thông tin chi tiết cư dân</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="resName" class="col-md-4 control-label">Tên</label>
                            <div class="col-md-6">
                                <input id="resName" readonly="readonly" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="resHouseName" class="col-md-4 control-label">Căn hộ</label>
                            <div class="col-md-6">
                                <input id="resHouseName" readonly="readonly" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="resId" class="col-md-4 control-label">CMND</label>
                            <div class="col-md-6">
                                <input id="resId" readonly="readonly" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="resGender" class="col-md-4 control-label">Giới tính</label>
                            <div class="col-md-6">
                                <input id="resGender" readonly="readonly" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="resHouseHolder" class="col-md-4 control-label">Chủ hộ</label>
                            <div class="col-md-6">
                                <input id="resHouseHolder" readonly="readonly" type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="resCreateDate" class="col-md-4 control-label">Ngày nhập căn hộ</label>
                            <div class="col-md-6">
                                <input id="resCreateDate" readonly="readonly" type="text" class="form-control" value="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="confirmModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Thông tin xác nhận</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <p style="    font-size: 17px;" id="msgConfirm"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="acceptApproveUser()">Chấp nhận</button>
            </div>
            <input type="hidden" id="residentId" value=""/>
            <input type="hidden" id="mode" value=""/>
        </div>
    </div>
</div>


<script>
    $(document).ready(function(){
        $("#slide-left").children().removeClass("active");
        $($("#slide-left li")[4]).addClass("active");
    });
</script>