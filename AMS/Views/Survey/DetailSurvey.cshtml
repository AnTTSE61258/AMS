@model AMS.ViewModel.SurveyViewModel
@{
    ViewBag.Title = "DetailSurvey";
    Layout = "~/Views/Management/__ManagementLayout.cshtml";
    Survey surveys = ViewBag.Survey;
    //   List<Question> questions = ViewBag.Question;
    List<Answer> answers = ViewBag.Answer;
    List<string> listAnswer = ViewBag.CountAnswer;
    List<string> listBlock = ViewBag.ListBlock;
    List<string> listFloor = ViewBag.ListFloor;
}
<script src="http://code.jquery.com/jquery-1.6.3.min.js"></script>
@*<script src="http://code.highcharts.com/highcharts.js"></script>*@
<script src="http://code.highcharts.com/modules/exporting.js"></script>
@*<script src="~/Scripts/exporting.js"></script>*@
<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/amsScript/canvasjs.min.js"></script>
<script type="text/javascript">


</script>
<style>
    .binh {
        border-color: #1ABC9C;
        box-shadow: none;
    }
</style>
<div class="col-sm-offset-1 col-sm-10">
    <div class="panel panel-default">
        <nav class="navbar navbar-default">
            <div class="container-fluid">

                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Survey/Survey">Trang chính</a></li>
                    <li><a href="#">Page 1</a></li>

                </ul>
            </div>
        </nav>
        <div class="panel-heading panel-heading-gray">
            <h4>Cập nhập chi tiết khảo sát</h4>
        </div>
        <div class="panel-body">
            <fieldset class="scheduler-border less-padding">
                @*<form class="form-horizontal" role="form" method="post">*@
                <div class="table-responsive">
                    @using (Html.BeginForm("UpdateSurvey", "Survey", FormMethod.Post))
                    {
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                <legend class="scheduler-border">Thông tin survey</legend>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Tiêu đề</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control binh" id="Title" name="Title" style="width: 330px" value="@surveys.Title"><br>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Ngày tạo</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control binh", style = "width: 330px", @Value = surveys.StartDate })<br>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Ngày bắt đầu</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(m => m.PublishDate, new { @class = "form-control binh", style = "width: 330px", @Value = surveys.PublishDate })<br>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Ngày kết thúc</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control binh", style = "width: 330px", @Value = surveys.EndDate })<br>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Khu</label>
                                    <div class="col-sm-7">
                                        <select class="form-control binh" name="selectItemBlock" style="width: 330px">
                                            <option value="@surveys.Block">@surveys.Block</option>
                                            @{
                        foreach (var item in listBlock)
                        {
                                    <option value="@item">@item</option>
                        }
                                            }
                                        </select><br>



                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Tầng</label>
                                    <div class="col-sm-7">
                                        <select class="form-control binh" name="selectItemFloor" style="width: 330px">
                                            <option value="@surveys.Floor">@surveys.Floor</option>
                                            @{
                        foreach (var item in listFloor)
                        {
                                    <option value="@item">@item</option>
                        }
                                            }
                                        </select><br>



                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">Đối tượng</label>
                                    <div class="col-sm-7">
                                        <select class="form-control binh" name="people" style="width: 330px">
                                            @{
                        if (SLIM_CONFIG.USER_ROLE_ADMIN == surveys.Member)
                        {
                                    <option  value="1">Admin</option>
                        }
                        else if (SLIM_CONFIG.USER_ROLE_RESIDENT == surveys.Member)
                        {
                                    <option value="3">Resident</option>
                        }
                        else if (SLIM_CONFIG.USER_ROLE_MANAGER == surveys.Member)
                        {
                                    <option  value="2">Manager</option>
                        }
                        else if (SLIM_CONFIG.USER_ROLE_HOUSEHOLDER == surveys.Member)
                        {
                                    <option value="4">Househoulder</option>
                        }
                        else if (SLIM_CONFIG.USER_ROLE_SUPPORTER == surveys.Member)
                        {
                                    <option  value="5">Supporter</option>
                        }
                                            }

                                            <option  value="1">Admin</option>
                                            <option  value="2">Manager</option>
                                            <option  value="3">Resident</option>
                                            <option value="4">Househoulder</option>
                                            <option value="5">Supporter</option>
                                        </select><br>



                                    </div>
                                </div>
                            </div>
                        </div>
                        int ii = 1;

                        //int i = 0;
                        // int count = answers.Count;

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                <fieldset class="scheduler-border less-padding">
                                    <legend class="scheduler-border">Câu hỏi</legend>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-3 control-label">Câu Hỏi @ii:</label>
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control binh" style="width: 330px" id="question" name="question" value="@surveys.Question"><br>


                                        </div>
                                    </div>
                                    <div class="form-group">

                                        @{

                        int counts = 1;
                        foreach (var b in answers)
                        {
                            <label for="inputEmail3" class="col-sm-3 control-label">Lựa chon @counts :</label>
                                            <div class="col-sm-7">
                                                @Html.TextBoxFor(m => m.Id, new { @type = "hidden", @Value = surveys.Id })

                                                <input type="hidden" id="count" name="count" value="@counts" />
                                                <input type="text" class="form-control binh" style="width: 200px" id="anwserr_@counts" name="anwser1" value="@b.AnswerContent">


                                            </div>
                            counts++;
                        }


                                        }
                                    </div>

                                </fieldset>
                            </div>
                        </div>
                        ////}


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                @*<a href="@Url.Action("UpdateSurvey", "Survey", new { surveyId =@surveys.Id})" class="fa fa-list-alt">Lưu..</a>*@
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <button type="reset" class="btn btn-primary">Xóa hết</button>
                            </div>

                        </div>

                    }


                </div>

                @*</form>*@
                @{
                    int abc = 1;
                    foreach (var item in listAnswer)
                    {
                        <input type="hidden" id="answer_@abc" name="countAnser" value="@item" />
                        abc++;
                    }

                }
            </fieldset>
            <fieldset>
                @*<div id="chartContainer" style="width: 100%; height: 300px"></div>*@
                <div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
            </fieldset>
        </div>

    </div>
</div>
<script>
    $(function () {
        $("#StartDate").datepicker();
        //$("#StartDate").attr('readOnly', 'false');
    });
    $(function () {
        $("#PublishDate").datepicker();
        //$("#PublishDate").attr('readOnly', 'false');
    });
    $(function () {
        $("#EndDate").datepicker();
        //$("#EndDate").attr('readOnly', 'false');
    });
    //var b = $("#answerr_2").val()
    //var a = $("#answerr_1").val()
    //var c = $("#answerr_3").val()
    var answer2 = parseFloat($("#answer_2").val())
    var answer1 = parseFloat($("#answer_1").val())
    var answer3 = parseFloat($("#answer_3").val())

    var a = "Lựa chọn 1"
    var b = "Lựa chọn 2"
    var c = "Lựa chọn 3"
    $(document).ready(function () {
        //var a = document.getElementById('#answerr_1').value;
        //var b = document.getElementById('#answerr_2').value;
        //var c = document.getElementById('#answerr_3').value;

        RenderPieChart('container', [
            [a, answer1],
            [b, answer2],
            [c, answer3]

        ]);


        function RenderPieChart(elementId, dataList) {
            new Highcharts.Chart({
                chart: {
                    renderTo: elementId,
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                }, title: {
                    text: 'Biểu đồ kết quả khảo sát'
                },
                tooltip: {
                    formatter: function () {
                        return '<b>' + this.point.name + '</b>: ' + this.percentage + ' %';
                    }
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            color: '#000000',
                            connectorColor: '#000000',
                            formatter: function () {
                                return '<b>' + this.point.name + '</b>: ' + this.percentage + ' %';
                            }
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: 'Browser share',
                    data: dataList
                }]
            });
        };
    });
</script>