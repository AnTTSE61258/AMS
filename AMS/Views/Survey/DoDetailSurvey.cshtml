        <div class="panel-body">
            <fieldset class="scheduler-border less-padding">
                @*<form class="form-horizontal" role="form" method="post">*@
                <div class="table-responsive">
                    @using (Html.BeginForm("DoDetailSurvey", "Survey", FormMethod.Post))
                    {


                        <div class="media-post-ctr">
                            <div class="media-post-header">

                                <h1 class="media-title">@surveys.Question</h1>
                                <div class="media-meta-ctr">
                                    <div class="author-profile-img">
                                        <img class="img-responsive" src="http://rocketeer.jaskokoyn.cc/public/uploads/default-profile.png">
                                    </div>
                                    <div class="media-meta-overview-ctr">
                                        <div class="media-meta-author-info">
                                            By <a href="http://rocketeer.jaskokoyn.cc/profile/admin">Admin</a>
                                        </div>
                                        <div class="media-meta-post-info">
                                            @Convert.ToString(string.Format("{0:MM/dd/yyyy}", surveys.StartDate))

                                    </div>
                                </div>
                            </div>
                        </div>




                        <div class="poll-ctr style-1" data-question-count="1">
                            <div class="poll-question-ctr  poll-unanswered " data-total-votes="8">
                                <div class="poll-question-img">
                                    <img src="~/images/Post/SEO_survey_reuslts-1024x768.jpg" class="img-responsive">
                                    <div class="poll-txt">
                                        @surveys.Title
                                    </div>
                                </div>
                                <br />


                                <div class="clearfix"></div>
                            </div>
                        </div>








                    </div>
                        int ii = 1;
                        int tem = 1;
                        int i = 0;
                        int count = answers.Count;
                        if (i < count)
                        {
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-8">
                                    <fieldset class="scheduler-border less-padding">
                                        <legend class="scheduler-border">Câu hỏi</legend>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-3 control-label">Câu Hỏi @ii:</label>
                                            <div class="col-sm-7">

                                                <input type="text" disabled="disabled" class="form-control binh" style="width: 330px" id="question" name="question" value="@surveys.Question"><br>
                                                @Html.TextBoxFor(m => m.Id, new { @type = "hidden", @Value = surveys.Id })
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            @{


                            int counts = 1;

                            foreach (var b in answers)
                            {
                                <label for="inputEmail3" class="col-sm-3 control-label">Câu trả lời:</label>
                                                <div class="col-sm-1">
                                                    @*@Html.RadioButtonFor(m => m.AnswerContent,b.Id, new { @Value = b.AnswerContent })*@


                                                    <input type="radio" id="@b.Id" name="answer" value="@b.AnswerContent">
                                                </div>
                                                <div class="col-sm-7">
                                                    <input type="hidden" id="answerId" name="answerId" value="@b.Id" />
                                                    <input type="hidden" id="count" name="count" value="@counts" />
                                                    @*<input type="radio" name="gender" value="@b.AnswerContent">*@
                                                    <input type="text" disabled="disabled" class="form-control binh" style="width: 230px" id="anwser1" name="anwser1" value="@b.AnswerContent">


                                                </div>
                                counts++;
                            }
                            i++;
                            ii++;
                            tem++;
                                            }
                                        </div>

                                    </fieldset>
                                </div>
                            </div>
                        }


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                @*<a href="@Url.Action("UpdateSurvey", "Survey", new { surveyId =@surveys.Id})" class="fa fa-list-alt">Lưu..</a>*@
                                <button type="submit" onclick="addCommentByAjax()" class="btn btn-primary">Lưu</button>

                                @{
                        if (surveys.Privacy == 1)
                        {
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModall">Xem kết quả</button>
                        }
                                }

                            </div>

                        </div>

                    }


                </div>


            </fieldset>
        </div>

    </div>
</div>
<div id="myModall" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Kết quả khảo sát</h4>
            </div>
            <div class="modal-body">
                @{
                    int abc = 1;
                    foreach (var item in listAnswer)
                    {

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Lựa chọn @abc:</label>
                            <div class="col-sm-7">
                                <input type="hidden" class="form-control binh" id="a" name="" style="width: 130px" value="@item"><br>
                                @{
                                    if (item == "NaN")
                                    {
                                                                  <input type="text" class="form-control binh" id="answer_@abc" name="countAnser" style="width: 130px" value="0 %"><br>
  
                                    }
                                    else
                                    {
                              <input type="text" class="form-control binh" id="answer_@abc" name="countAnser" style="width: 130px" value="@item %"><br>

                                    }


                       
                        
                                }

                            </div>
                        </div>
                        <input type="hidden" id="answer_@abc" name="countAnser" value="@item" />
                        abc++;
                    }

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Tắt</button>

            </div>
        </div>
    </div>
</div>
