
@{
    ViewBag.Title = "View House Info";
 

    List<House> allHouseInfo = ViewBag.allHouseInfo;
}
<div id="content">


    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Block</th>
                <th>Floor</th>
                <th>House Name</th>
                <th>Description</th>
                <th>Area</th>
                

            </tr>
        </thead>
        <tbody id="housetablebody"></tbody>
        @{
            foreach (House house in allHouseInfo)
            {
                <tr>
                    <td>@house.Id</td>
                    <td>@house.Block</td>
                    <td>@house.Floor</td>
                    <td>@house.HouseName</td>
                    <td>@house.Description</td>
                    <td>@house.Area</td>
                </tr>
            }

        }
    </table>
</div>
