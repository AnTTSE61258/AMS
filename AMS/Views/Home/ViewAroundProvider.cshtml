@{
    ViewBag.Title = "Dịch vụ xung quanh";
    Layout = "~/Views/Home/_socialNetworkLayout.cshtml";
    List<AroundProvider> allProviders = ViewBag.AllProviders;
}

<link href="~/Content/aroundProvider/owl.carousel.css" rel="stylesheet" />
<link href="~/Content/aroundProvider/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/aroundProvider/animate.min.css" rel="stylesheet" />
<link href="~/Content/aroundProvider/main.css" rel="stylesheet" />
<link href="~/Content/aroundProvider/responsive.css" rel="stylesheet" />
<link href="~/Content/rating.css" rel="stylesheet" />

<script src="~/Scripts/aroundProvider/jquery.nav.js"></script>
<script src="~/Scripts/aroundProvider/jquery.sticky.js"></script>
<script src="~/Scripts/aroundProvider/plugins.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>
<script src="~/Scripts/aroundProvider/main.js"></script>
<script src="~/Scripts/aroundProvider/main.min.js"></script>
<script src="~/Scripts/aroundProvider/wow.min.js"></script>
@*<script src="~/Scripts/rating.js"></script>*@

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-body">
            <section id="blog">
                <div class="row">
                    <div class="col-md-12">
                        <div class="block">
                            <h1 class="heading">
                                <span>Dịch vụ</span> xung quanh
                            </h1>
                            <ul>
                                @{
                                    for (int i = 0; i < 2; i++)
                                    {
                                        <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="300ms">
                                            <a href="~/Home/SingleProviderDetail?id=@allProviders[i].Id">
                                                <div class="blog-img">
                                                    <img src="~/images/aroundProvider/blog-img-1.jpg" />
                                                </div>
                                                <div class="content-right">
                                                    <h3>@allProviders[i].Name</h3>
                                                    <p>@allProviders[i].Address</p>
                                                </div>
                                            </a>

                                        </li>
                                    }
                                }

                                @{
                                    for (int i = 2; i < 4; i++)
                                    {
                                        <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="500ms">
                                            <a href="~/Home/SingleProviderDetail?id=@allProviders[i].Id">

                                                <div class="content-left">
                                                    <h3>@allProviders[i].Name</h3>
                                                    <p>@allProviders[i].Address</p>
                                                </div>
                                                <div class="blog-img-2">
                                                    <img src="~/images/aroundProvider/blog-img-3.jpg" />
                                                </div>
                                            </a>
                                        </li>
                                    }
                                }

                                @{
                                    for (int i = 4; i < 6; i++)
                                    {
                                        <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="300ms">
                                            <a href="~/Home/SingleProviderDetail?id=@allProviders[i].Id">
                                                <div class="blog-img">
                                                    <img src="~/images/aroundProvider/blog-img-4.jpg" />
                                                </div>
                                                <div class="content-right">
                                                    <h3>@allProviders[i].Name</h3>
                                                    <p>@allProviders[i].Address</p>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                            <a class="btn btn-default btn-more-info wow bounceIn" data-wow-duration="500ms" data-wow-delay="1200ms" href="~/Home/ViewAroundProviderDetail" role="button">Xem toàn bộ</a>
                        </div>
                    </div>
                </div>
            </section>

            <section id="slider">
                <div class="row">
                    <div class="col-md-12">
                        <div style="visibility: visible; animation-duration: 500ms; animation-delay: 300ms; animation-name: fadeInUp;" class="block wow fadeInUp animated" data-wow-duration="500ms" data-wow-delay="300ms">
                            <div class="title">
                                <h3>Nổi bật <span>trong tuần</span></h3>
                            </div>
                            <div style="opacity: 1; display: block;" id="owlexample" class="owl-carousel owl-theme">
                                <div class="owl-wrapper-outer">
                                    <div style="width: 4240px; left: 0px; display: block;" class="owl-wrapper">
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-1.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-2.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-3.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-4.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-1.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-2.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-3.jpg" alt="">
                                            </div>
                                        </div>
                                        <div style="width: 265px;" class="owl-item">
                                            <div>
                                                <img class="img-responsive" src="~/images/aroundProvider/slider-img-4.jpg" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="owl-controls clickable">
                                    <div class="owl-pagination">
                                        <div class="owl-page active">
                                            <span class=""></span>
                                        </div>
                                        <div class="owl-page">
                                            <span class=""></span>
                                        </div>
                                    </div>
                                    <div class="owl-buttons">
                                        <div class="owl-prev"></div>
                                        <div class="owl-next">
                                            <i class="fa fa-angle-right"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div><!-- .col-md-12 close -->
                </div><!-- .row close -->
            </section>

            <section id="price">
                <div class="row">
                    <div class="col-md-12">
                        <div class="block">
                            <h1 class="heading wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">Sản phẩm <span>PHONG PHÚ</span> Giá cả <span>ƯU ĐÃI</span></h1>
                            <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                                Sản phẩm đa dạng, phong phú với giá cả ưu đãi nhất trên thị trường hiện nay.
                            </p>
                            <div class="pricing-list">
                                <div class="title" style="margin-left: 2%">
                                    <h3>Giá <span>nổi bật</span></h3>
                                </div>
                                <ul>
                                    <li class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                                        <div class="item">
                                            <div class="item-title">
                                                <h2>Bún bò tái</h2>
                                                <div class="border-bottom"></div>
                                                <span>VND 25.000</span>
                                            </div>
                                            <p>Ngon - bổ - rẻ</p>
                                        </div>
                                    </li>
                                    <li class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                                        <div class="item">
                                            <div class="item-title">
                                                <h2>Karaoke Gia Đình</h2>
                                                <div class="border-bottom"></div>
                                                <span>VND 25.000</span>
                                            </div>
                                            <p>Giá rẻ mỗi ngày</p>
                                        </div>
                                    </li>
                                    <li class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                                        <div class="item">
                                            <div class="item-title">
                                                <h2>Bida 9 balls</h2>
                                                <div class="border-bottom"></div>
                                                <span>VND 20.000</span>
                                            </div>
                                            <p>Thứ Hai vui vẻ</p>
                                        </div>
                                    </li>

                                </ul>
                                @*<a class="btn btn-default pull-right wow bounceIn" data-wow-duration="500ms" data-wow-delay="1200ms" href="#" role="button">More Info</a>*@
                            </div>
                        </div>
                    </div><!-- .col-md-12 close -->
                </div><!-- .row close -->
            </section>

        </div>

        
    </div>
</div>


