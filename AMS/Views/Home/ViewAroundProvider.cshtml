@{
    ViewBag.Title = "Dịch vụ xung quanh";
    Layout = "~/Views/Home/_socialNetworkLayout.cshtml";
    List<AroundProvider> allFoods = ViewBag.AllFoods;
    List<AroundProvider> allEntertain = ViewBag.AllEntertain;
    List<AroundProvider> allKidCorners = ViewBag.AllKidCorners;
}

