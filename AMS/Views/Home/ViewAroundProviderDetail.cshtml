@{
    ViewBag.Title = "Tất cả dịch vụ";
    Layout = "~/Views/Home/_socialNetworkLayout.cshtml";
    List<AroundProvider> allProviders = ViewBag.AllProviders;
}
<link href="~/Content/aroundProvider/main.css" rel="stylesheet" />

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="row">
            <div class="col-md-12">
                <div class="page-title">
                    <h2>Dịch vụ xung quanh</h2>
                    <p>Hãy đến với các dịch vụ, nhà cung cấp quanh đây với giá cả ưu đãi nhất!</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="work-filter wow fadeInRight animated" data-wow-duration="500ms">
                <ul class="text-center">
                    <li><a href="javascript:;" data-filter="all" class="filter active">Tất cả</a></li>
                    <li><a href="javascript:;" data-filter=".1" class="filter">Đồ ăn</a></li>
                    <li><a href="javascript:;" data-filter=".2" class="filter">Giải trí</a></li>
                    <li><a href="javascript:;" data-filter=".3" class="filter">Góc của bé</a></li>
                </ul>
            </div>
        </div>
        <div class="row" id="Container">
            @{
                foreach (var provider in allProviders)
                {
                    <div class="col-md-4 col-sm-6 mix work-item">
                        <div class="single-project @provider.AroundProviderCategory.Id">
                            <div class="project-preview">
                                <a href="~/Home/SingleProviderDetail?id=@provider.Id">
                                    <img src="@provider.ImageUrl" class="img-responsive" alt="">
                                </a>
                                <div class="project-meta">
                                    <div class="project-date">
                                        <p class="icon-phone"> @provider.Tel</p>
                                    </div>

                                    <div class="project-count">
                                        <p><i class="fa fa-eye"></i> @provider.ClickCount</p>
                                        <p><i class="fa fa-comment"></i> 20</p>
                                        @*<p><i class="fa fa-download"></i> 128</p>*@
                                    </div>
                                </div>
                            </div>

                            <div class="project-link">
                                <h2><a href="" style="font-weight: 700">@provider.Name</a></h2>
                                <p>@provider.Address</p>
                                <a href="~/Home/SingleProviderDetail?id=@provider.Id" class="project-detail">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>

        @*<div class="row">
                <div class="col-md-12 text-center">
                    <a href="" class="more-link">More Freebies <i class="fa fa-angle-right"></i></a>
                </div>
            </div>*@


    </div>
</div>

